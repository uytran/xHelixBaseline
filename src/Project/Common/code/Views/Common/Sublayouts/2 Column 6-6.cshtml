@using Sitecore
@using xHelix.Foundation.SitecoreExtensions.Extensions
@using xHelix.Foundation.Theming.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
<div class="@Model.Rendering.GetContainerClass()">
  <div class="row">
    <div class="col-md-6">
      @Html.Sitecore().DynamicPlaceholder("col-wide-1", Model.Rendering.GetUseStaticPlaceholderNames())
    </div>
    <div class="col-md-6">
      @Html.Sitecore().DynamicPlaceholder("col-wide-2", Model.Rendering.GetUseStaticPlaceholderNames())
    </div>
  </div>
</div>